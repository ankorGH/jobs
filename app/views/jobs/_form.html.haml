= form_with(model: job, local: true) do |form|
  - if job.errors.any?
    #error_explanation
      %h2
        = pluralize(job.errors.count, "error")
        prohibited this job from being saved:
      %ul
        - job.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :role
    = form.text_field :role
  .field
    = form.label :duration
    = form.text_field :duration
  .field
    = form.label :salary
    = form.text_field :salary
  .field
    = form.label :requirements
    = form.text_field :requirements
  .field
    = form.label :qualification
    = form.text_field :qualification
  .field
    = form.label :perks
    = form.text_field :perks
  .field
    = form.label :company
    = form.text_field :company
  .field
    = form.label :contact_email
    = form.text_field :contact_email
  .field
    = form.label :poster_name
    = form.text_field :poster_name
  .field
    = form.label :poster_email
    = form.text_field :poster_email
  .field
    = form.label :phone
    = form.text_field :phone
  .actions
    = form.submit
