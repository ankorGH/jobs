<% content_for :title do %>
  <%= "All Jobs | #{t('app.name')}" %>
<% end %>
<h1 class="page--title">All Jobs</h1>
<div class="page--legend-buttons">
  <p class="page--legend">All the DevCongress Job Board listings here</p>
</div>
<div class="main--content">
  <ul class="job--list">
    <% @jobs.each do |job| %>
      <li class="job--list__item">
        <%= link_to job.title, job, :class => "job--list__item-link" %>
      </li>
    <% end %>
  </ul>
</div>
<br/>
